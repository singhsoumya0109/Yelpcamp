 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/flash') %>
    <main class="container mt-2 mb-3">
                
        <%- body %>
    </main>
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script>
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        var isValid = form.checkValidity();
                        var priceInput = form.querySelector('#price');
                        if (parseFloat(priceInput.value) < 0) {
                            isValid = false;
                            priceInput.setCustomValidity('Price must be a non-negative number.');
                            priceInput.nextElementSibling.textContent = 'Price must be a non-negative number.';
                        } else {
                            priceInput.setCustomValidity('');
                        }
    
                        if (!isValid) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
    
                    var priceInput = form.querySelector('#price');
                    priceInput.addEventListener('input', function() {
                        if (parseFloat(priceInput.value) < 0) {
                            priceInput.setCustomValidity('Price must be a non-negative number.');
                            priceInput.nextElementSibling.textContent = 'Price must be a non-negative number.';
                        } else {
                            priceInput.setCustomValidity('');
                            priceInput.nextElementSibling.textContent = 'Looks good!';
                        }
                    });
                });
            }, false);
        })();
    </script>


    
    
</body>
</html> 
